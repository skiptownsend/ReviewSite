@model IEnumerable<ReviewSite_Web.Models.DTO.ProductReviewDTO>
<br />
<div class="containter p-4 border">
    <div class="row pb-2">
        <h1 class="text-primary">List of Product Reviews</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="ProductReview" asp-action="CreateProductReview" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Write a Review</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Image
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Product Review
                </th>
                <th>
                    Reviewer
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ImageUrl</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Review</td>
                    <td>@item.ReviewerName</td>
                    <td>
                        <a asp-controller="ProductReview" asp-action="UpdateProductReview" asp-route-productReviewId="@item.ProductId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="ProductReview" asp-action="DeleteProductReview" asp-route-productReviewId="@item.ProductId" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>