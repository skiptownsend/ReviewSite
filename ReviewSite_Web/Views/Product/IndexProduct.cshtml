@model IEnumerable<ReviewSite_Web.Models.DTO.ProductDTO>
<br />
<div class="containter p-4 border">
    <div class="row pb-2">
        <h1 class="text-primary">List of Products</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Product</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Product Image
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Product Description
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.ImageUrl</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-controller="Product" asp-action="UpdateProduct" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Product" asp-action="DeleteProduct" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>